<div class="page-header">
  <h1>
    Tags
    <a href="/tags/new" class="btn btn-lg btn-success">New Tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tag name</th>
        <th>Business</th>
        <th>Actions</th>
      </tr>

      <% @tags.each do |tag| %>
      <tr>
        <td>
          <% if tag.tag_name.present? %>
            <a href="/tag_names/<%= tag.tag_name.id %>">
              <%= tag.tag_name.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if tag.business.present? %>
            <a href="/businesses/<%= tag.business.id %>">
              <%= tag.business.address %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/tags/<%= tag.id %>" class="btn btn-primary">Show</a>
          <a href="/tags/<%= tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tag/<%= tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tags, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
